{
  "manifest_version": 3,
  "name": "Kill-Tabs",
  "version": "1.0",
  "permissions": ["tabs", "storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Close Tabs"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/clover.png",
    "32": "icons/clover.png",
    "48": "icons/clover.png",
    "128": "icons/clover.png"
  }
}
